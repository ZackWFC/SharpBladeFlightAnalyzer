<UserControl x:Class="SharpBladeFlightAnalyzer.LogPageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:d3="clr-namespace:InteractiveDataDisplay.WPF;assembly=InteractiveDataDisplay.WPF"
             xmlns:local="clr-namespace:SharpBladeFlightAnalyzer"
             mc:Ignorable="d" 
             d:DesignHeight="670" d:DesignWidth="790">
    <Grid>
        <TabControl TabStripPlacement="Bottom">
            <TabItem Header="数据" Width="100" Height="30">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="3"/>
                        <ColumnDefinition Width="1*" MinWidth="100" MaxWidth="300"/>
                    </Grid.ColumnDefinitions>
                    <!--<d3:Chart Margin="0,5,5,0">

                    </d3:Chart>-->
                    
                    <GridSplitter Grid.Column="1" Width="3" HorizontalAlignment="Center" Background="LightGray"/>
                    <ListView Grid.Column="2" HorizontalContentAlignment="Stretch">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="100">
                                    <TextBlock Text="123456"/>
                                    <d3:Chart Height="100">

                                    </d3:Chart>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListViewItem Height="200" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                            <Canvas>
                                <d3:Chart Width="180" Height="180">

                                </d3:Chart>
                            </Canvas>
                        </ListViewItem>
                        <ListViewItem Height="200" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                            <d3:Chart >

                            </d3:Chart>
                        </ListViewItem>
                        <ListViewItem Height="200" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                            <d3:Chart >

                            </d3:Chart>
                        </ListViewItem>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="参数" Width="100" Height="30" >
                <ListView>
                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Header="Name" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Value" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Disc" Width="500">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="消息" Width="100" Height="30">
                <ListView>
                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Header="Time" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Level" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Msg" Width="500">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
